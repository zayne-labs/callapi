{
	"name": "@zayne-labs/callapi-root",
	"type": "module",
	"version": "0.0.0",
	"packageManager": "pnpm@9.15.4",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zayne-labs/callapi.git"
	},
	"scripts": {
		"build": "turbo run --filter=./packages/* build",
		"build:callapi": "turbo run --filter=./packages/callapi build",
		"build:callapi-plugins": "turbo run --filter=./packages/callapi-plugins build",
		"build:dev": "turbo run --filter=./packages/* build:dev",
		"build:test": "turbo run --filter=./packages/* build:test",
		"dev:callapi": "turbo run --filter=./packages/callapi dev",
		"dev:callapi-plugins": "turbo run --filter=./packages/callapi-plugins dev",
		"dev:dev": "turbo run --filter=./apps/dev dev",
		"dev:docs": "turbo run --filter=./apps/docs dev",
		"inspect:eslint-config": "pnpx @eslint/config-inspector@latest",
		"lint:attw": "turbo run --filter=./packages/* lint:attw",
		"lint:eslint": "turbo run --filter=./packages/* lint:eslint",
		"lint:eslint:dev": "turbo run --filter=./packages/* lint:eslint:dev",
		"lint:eslint:interactive": "turbo run --filter=./packages/* lint:eslint:interactive",
		"lint:eslint:root": "eslint . --max-warnings 0",
		"lint:eslint:root:interactive": "pnpx eslint-interactive@latest . --max-warnings 0 --fix",
		"lint:format": "turbo run --filter=./packages/* lint:format",
		"lint:format:root": "prettier --write .",
		"lint:packages": "pnpm dedupe --check",
		"lint:publint": "turbo run --filter=./packages/* lint:publint",
		"lint:size": "turbo run --filter=./packages/* lint:size",
		"lint:type-check": "turbo run --filter=./packages/* lint:type-check",
		"prepare": "husky",
		"release": "changeset publish",
		"release:rc": "pnpm build && changeset publish --tag rc",
		"release:test": "pnpx pkg-pr-new publish ./packages/*",
		"test:coverage": "turbo --filter \"./packages/*\" test:coverage",
		"test:dev": "turbo --filter \"./packages/*\" test:dev",
		"test": "turbo --filter \"./packages/*\" test"
	},
	"devDependencies": {
		"@changesets/cli": "2.29.7",
		"@eslint-react/eslint-plugin": "^1.53.1",
		"@next/eslint-plugin-next": "^15.5.3",
		"@types/node": "^24.5.2",
		"@zayne-labs/eslint-config": "0.9.16",
		"@zayne-labs/prettier-config": "0.9.16",
		"eslint": "9.36.0",
		"eslint-plugin-better-tailwindcss": "^3.7.9",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.20",
		"husky": "9.1.7",
		"lint-staged": "16.1.6",
		"prettier": "3.6.2",
		"tailwindcss": "^4.1.13",
		"turbo": "^2.5.6",
		"typescript": "^5.9.2"
	}
}
